<% if current_user %>
  <% if current_user.pinboard_token.present? %>
    <h4>Archive</h4>
    <div class="archive">
      <% @sent_bookmarks.each do |bookmark|  %>
        <div class="archive-bookmark">
          <div style="line-height: 20px; font-size: 18px;"><%= link_to bookmark.title, bookmark.url, html_options = { title: JSON.parse(bookmark.tags).each{|tag| tag} } %></div>
          <div class="archive-bookmark-date">
            <i class="icon ion-android-mail"></i>
            <%= bookmark.sent_back_date.strftime("%b %d, %Y") %> <i class="icon ion-arrow-left-c"></i> <%= bookmark.saved_date.strftime("%b %d, %Y") %> (<%= ((bookmark.sent_back_date-bookmark.saved_date)/86400).to_i %> days)
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    Connect to Pinboard to start receiving old bookmarks >>
  <% end %>
<% else %>
