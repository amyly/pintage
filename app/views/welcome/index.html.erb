  <h1>Hello, world!</h1>
  <p>...</p>
  <p><a class="btn btn-primary btn-lg" role="button">Learn more</a></p>
</div>

<div>Have an account? <%= link_to 'Login here.'.html_safe, new_user_session_path %></div>
<% end %>

